<!doctype html>
<html>
<head>
    <title>TDS</title>
    <script src="https://kit.fontawesome.com/e3b231881d.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="style.css">
</head>
<body>

    <header>
        <a href="" class="logoLink"><img class="logo" src="img/logo.png" alt="logo"></a>
        <h2 class="title">Tʜᴇ Dᴀɪʟʏ Sᴄʜᴇᴅᴜʟᴇ</h2>
        <section class="header-right clearFix">
            <a class="active" href="">Home</a>
            <!-- <a href="">Contact</a>
            <a href="">About</a> -->
            <a href="">Sign Out</a>
        </section>
    </header>

<section class="container">

    <h1><span class="fa fa-sign-in"></span> Signup</h1>

    <% if (message.length > 0) { %>
        <section class="alert alert-danger"><%= message %></section>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/signup" method="post">
        <section class="form-group">
            <label>Email</label>
            <br>
            <input type="text" class="form-control" name="email">
        </section>
        <section class="form-group">
            <label>Password</label>
            <br>
            <input type="password" class="form-control" name="password">
        </section>

        <button type="submit" class="loginSignUp">Signup</button>
    </form>

    <hr>

    <p>Already have an account? <a href="/login">Login</a></p>
    <p>Or go <a href="/">home</a>.</p>

</section>
</body>
</html>
